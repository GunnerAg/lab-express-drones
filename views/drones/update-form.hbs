<h2>Update the drone</h2>
<form method="POST" action="/drones/{{drone._id}}/edit">

<label for="name">Name of the model</label>
<input name="name" type="text" class="name" id="name" value="{{drone.name}}">

<label for="propellers">Number of propellers</label>
<input name="propellers" type="number" class="propellers" id="propellers" value="{{drone.propellers}}">

<label for="maxSpeed">Top speed</label>
<input name="maxSpeed" type="number" class="maxSpeed" id="maxSpeed" value="{{drone.maxSpeed}}">

<button type="submit" class="btn">Submit</button>
</form>